/*主容器*/
.stepper {
  height:20px;
  border: 1px solid #ccc;
  border-radius: 3px;
  align-items: center;
}
/*加号和减号*/
.stepper text {
  float: left;
  width: 19px;
  line-height: 20px;
  text-align: center;
}
/*数值*/
.stepper input {
  width: 40px;
  height: 20px;
  float: left;
  margin: 0 auto;
  text-align: center;
  align-items: center;
  font-size: 12px;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
}
/*普通样式*/
.stepper .normal {
  color:black;
}
/*禁用样式*/
.stepper .disable {
  color: #ccc;
}

