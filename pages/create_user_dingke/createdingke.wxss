.view_container {
  display: flex;
  flex-direction: column;
}

.view_title {
  display: flex;
  justify-content: center;
}

.view_content {
  margin-top: 15px;
}

.view_content_list {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.view_list_item {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  justify-items: center;
  text-justify: inter-cluster;
  align-items: center;
  flex-flow: row;
  padding-left: 10px;
  padding-right: 10px;
}

.view_text{
  width: 100px;
  height:20px;
  font-size:14px;
  color:#999999;
  margin:2px 10px;
  border-radius:3px;
  border:thin solid #aaa
}

.view_bottom {
  margin-top: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
}

.text_item{
  padding-left: 40px;
  padding-right: 40px;
}

.input-radius{
  margin-left: 2px;
}

